<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="/"><b>Coding 4 Medicine</a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="form-group has-feedback">
	<input autofocus="autofocus" type="email" class="form-control" placeholder="Email" value="" name="user[email]" id="user_email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
	<input autocomplete="off" type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control" placeholder="Retype password">
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
            <label>
              By clicking "Register", I agree to <a href="#">Terms.</a>
            </label>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" name="commit" value="Sign up" data-disable-with="Sign up" class="btn btn-primary btn-block btn-flat">Register</button>
        </div>
        <!-- /.col -->
      </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
  <!-- /.form-box -->
</div>
<!-- /.register-box -->

